@model IEnumerable<Bean_Scene_Reservation.Models.Area>

@{
    ViewData["Title"] = "Manage Areas";
}

<h1 class="open-sans">@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary" aria-label="Add Area" title="Add Area">
        <i class="bi-plus-circle"></i>
        Add Area
    </a>
</p>

<div class="table-responsive">
    <table class="table align-middle">
        <caption>List of all Areas within Bean Scene</caption>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tables)
                </th>
                <th aria-label="Actions: Edit, Delete"></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @String.Join(", ", item.Tables?.Select(t => t.TableNumber) ?? [])
                </td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary" aria-label="Edit" title="Edit">
                        <i class="bi bi-pencil"></i>
                    </a>
                    @* if the area has any tables, deleting it is disabled *@
                    @if (item.Tables?.Any() ?? false) {
                        <a class="btn btn-dark" aria-label="Cannot Delete" title="Cannot delete area as it has tables associated with it.">
                            <i class="bi bi-ban"></i>
                        </a>
                    } else {
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" aria-label="Delete" title="Delete">
                            <i class="bi bi-trash"></i>
                        </a>
                    }
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
