@{
    const string companyName = "Bean Scene";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @companyName</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!--<link rel="stylesheet" href="~/Bean_Scene_Reservation.styles.css" asp-append-version="true" />-->
    <!-- Google Fonts (OpenSans and Tangerine) -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&family=Tangerine:wght@400;700&display=swap" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <div class="container-fluid text-center header-title">
            <a asp-area="" asp-controller="Home" asp-action="Index">
                <img class="" src="~/assets/images/logo/png/logo-secondary.png" alt="Bean Scene Logo"/>
            </a>
        </div>
        <nav class="navbar navbar-expand-lg navbar-toggleable-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/assets/images/symbol/png/symbol-primary.png" alt="Bean Scene" width="30"/>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house"></i>
                                Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="bi bi-pencil"></i>
                                Make a Reservation
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <i class="bi bi-clock-history"></i>
                                View Previous Reservations
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-tools"></i>
                                Staff Tools
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">
                                    <i class="bi bi-telephone-inbound"></i>
                                    Capture Reservation
                                </a></li>
                                <li><a class="dropdown-item" href="#">
                                    <i class="bi bi-alarm"></i>
                                    View Upcoming Reservations
                                </a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="ManagerPortal">
                                <i class="bi bi-gear"></i>
                                Manager Portal
                            </a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer">
        <div class="container text-center">
            <div class="row pt-1">
                <div class="col">
                    <strong>Contact Us!</strong>
                </div>
            </div>
            <div class="row pt-1">
                <div class="col">
                    <i class="bi bi-telephone"></i> 
                    0200 000 000
                </div>
            </div>
            <div class="row pt-1">
                <div class="col text-break">
                    <a href="mailto:reservations@beanscene.com.au">
                        <i class="bi bi-envelope"></i>
                        reservations@beanscene.com.au
                    </a>
                </div>
            </div>
            <div class="row pt-1">
                <div class="col">
                    <i class="bi bi-building"></i>
                    205 Peats Ferry Rd, Hornsby NSW 2077
                </div>
            </div>
            <div class="row pt-1">
                <div class="col">
                    <hr/>
                </div>
            </div>
            <div class="row pt-1">
                <div class="col">
                    <em>&copy; @(DateTime.Today.Year) - @companyName</em>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
