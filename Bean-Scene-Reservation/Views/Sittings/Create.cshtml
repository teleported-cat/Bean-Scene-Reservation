@model Bean_Scene_Reservation.Models.Sitting

@{
    ViewData["Title"] = "Add New Sitting";
}

<h1 class="open-sans">@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SittingTypeId" class="control-label"></label>
                <select asp-for="SittingTypeId" class ="form-control" asp-items="ViewBag.SittingTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="StartTimeId" class="control-label"></label>
                <select asp-for="StartTimeId" class ="form-control" asp-items="ViewBag.StartTimeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="EndTimeId" class="control-label"></label>
                <select asp-for="EndTimeId" class ="form-control" asp-items="ViewBag.EndTimeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Capacity" class="control-label"></label>
                <input asp-for="Capacity" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="@Html.GetEnumSelectList<Sitting.SittingStatus>()"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group border-top mt-4 pt-4">
                <input type="submit" value="Create" class="btn btn-primary" aria-label="Create" />
                <a asp-action="Index" class="btn btn-secondary" aria-label="Cancel">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
