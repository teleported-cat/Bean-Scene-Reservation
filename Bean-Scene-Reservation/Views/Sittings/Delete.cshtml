@model Bean_Scene_Reservation.Models.Sitting

@{
    string sittingType = Model.SittingType.Name;
    ViewData["Title"] = "Delete " + Model.Date + " " + sittingType;
}

<h1 class="open-sans">@(ViewData["Title"] + "?")</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SittingType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SittingType.Name)
        </dd>
        <dt class = "col-sm-2">
            Sitting Times
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartTimeId) - @Html.DisplayFor(model => model.EndTimeId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Capacity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Date" />
        <input type="hidden" asp-for="SittingTypeId" />
        <input type="submit" value="Delete" class="btn btn-danger" aria-label="Delete" title="Delete" />
        <a asp-action="Index" class="btn btn-secondary" aria-label="Cancel" title="Cancel">Cancel</a>
    </form>
</div>
