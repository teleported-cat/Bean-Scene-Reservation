@model Bean_Scene_Reservation.Controllers.UsersController.DetailedUserDto

@{
    ViewData["Title"] = Model.FullName + "\'s Details";
}

<h1 class="open-sans">@ViewData["Title"]</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-10">
            @if (String.IsNullOrEmpty(Model.Phone))
            {
                @:(No Phone No.)
            }
            else
            {
                @Html.DisplayFor(modelItem => Model.Phone)
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Roles)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Roles.Count == 0)
            {
                @:(No Roles)
            }
            else
            {
                @string.Join(", ", Model.Roles)
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EmailConfirmed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmailConfirmed)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneConfirmed)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneConfirmed)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TwoFactorEnabled)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TwoFactorEnabled)
        </dd>
    </dl>
</div>

<div class="form-group border-top mt-4 pt-4">
    <a class="btn btn-primary" aria-label="Edit" title="Edit" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a asp-action="Index" class="btn btn-secondary" title="Back" aria-label="Back">Back</a>
</div>
