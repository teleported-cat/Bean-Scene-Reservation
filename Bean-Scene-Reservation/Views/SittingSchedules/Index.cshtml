                @Html.DisplayFor(modelItem => item.ForWednesday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ForThursday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ForFriday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ForSaturday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ForSunday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SittingType.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
