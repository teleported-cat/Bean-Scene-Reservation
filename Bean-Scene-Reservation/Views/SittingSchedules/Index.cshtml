                @Html.DisplayNameFor(model => model.ForThursday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ForFriday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ForSaturday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ForSunday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SittingType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ForMonday)
